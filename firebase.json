{
  "hosting": {
    "public": "packages/webapp/dist",
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [{
    "source": "packages/functions",
    "codebase": "default",
    "runtime": "nodejs20"
  }],
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5002
    }
  }
}
