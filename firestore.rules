rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             (request.auth.token.email == 'hasod@hasodonline.com' ||
              request.auth.token.email == 'yubarkan@gmail.com');
    }

    // Services collection - public read, admin write
    match /services/{serviceId} {
      // Anyone can read active services
      allow read: if true;

      // Only admins can create, update, or delete services
      allow write: if isAdmin();
    }

    // Manual transactions collection - admin only
    match /manualTransactions/{transactionId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Subscription mappings - admin only (Cloud Functions write via admin SDK)
    match /subscriptionMappings/{mappingId} {
      allow read: if isAdmin();
      allow write: if false;  // Only Cloud Functions can write
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document, admins can read all
      allow read: if request.auth != null &&
                    (request.auth.uid == userId || isAdmin());

      // Users can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can update their own profile (but not subscription fields)
      allow update: if request.auth != null &&
                      request.auth.uid == userId &&
                      !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['services', 'email', 'uid']);

      // Admins can delete users
      allow delete: if isAdmin();
    }

    // Webhook events collection (for auditing PayPal webhooks)
    match /webhookEvents/{eventId} {
      // Only admins can read webhook logs
      allow read: if isAdmin();

      // Deny client writes (only Cloud Functions can write via admin SDK)
      allow write: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
